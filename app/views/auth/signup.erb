        <a href="/logout">Logout</a>
      <% else %>
      <%= display_error %>
        <form action="/signup" method="POST"><br>
          Desired Alias<br>
          <input name="user[alias]"></input><br>
          E-mail Address<br>
          <input name="user[email]"></input><br>
          Password<br>
