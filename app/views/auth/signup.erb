          Password Confirmation<br>
          <input name="user[password_confirmation]" type=password></input><br>
          <input type="submit" value="submit">
          <!-- ADD AJAX STATUS SUBMITTING BUTTON -->
        </form>
      <% end %>
      <a href = "/">back home</a>
</p>
